	<main>
		<section class="section-1">
			<div class="container text-center">
				<div class="row">
					<div class="col-md-6">
						<div class="pray">
							<img src="#" alt="Pray">
						</div>
					</div>
					<div class="col-md-6">
						<div class="panel text-left">
							<h1> </h1>
							<p class="pt-4">
								
							</p>
							<p>
								
							</p>
						</div>
						
					</div>
					
				</div>
			</div>
		</section>
