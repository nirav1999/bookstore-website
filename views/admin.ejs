						<p>books sold</p>

					</div>
					<div class="rect">
						<h1>474</h1>
						<p> cups coffee</p>

					</div>
					
				</div>
			</div>

			<div class="purchase text-center">
				<h1>Purchase Whatever you want</h1>
				<p></p>
				<div class="cards">
					<div class="d-flex flex-row justify-content-center flex-wrap">
						<!-- firstcard-->
						<div class="card">
							<div class="card-body">
								<div class="title">
									<h5 class="card-title">
										Kindle iPad
									</h5>
								</div>
								<p class="card-text">
									
								</p>
								<div class="pricing">
									<h1> Rs 2000 </h1>
									<a href ="#" class="btn btn-dark px-5 py-2 mb-5">Purchase now</a>
								</div>
							</div>
						</div>
						<!-- secondcard-->
						<div class="card">
							<div class="card-body">
								<div class="title">
									<h5 class="card-title">
										Membership
									</h5>
								</div>
								<p class="card-text">
									One year free unlimited ebooks!
								</p>
								<div class="pricing">
									<h1> Rs 4000</h1>
									<a href ="#" class="btn btn-dark px-5 py-2 mb-5">Purchase now</a>
								</div>
							</div>
						</div>
						<!-- third card-->
						<div class="card">
							<div class="card-body">
								<div class="title">
									<h5 class="card-title">
										Book vouchers
									</h5>
								</div>
