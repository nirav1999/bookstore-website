</head>
<body id="login">
	<header>
		<h1 class="enter">Welcome to BookHut!</h1>
	</header>
	<div class="login-page">
		<div class="form">
			<form class="register-form" method="POST" action="/add" id="add">
				<input type="text" placeholder="username" name="username"/>
				<input type="password" placeholder="password" name="pwd"/>
				<input type="email" placeholder="email" name="email"/>
				<input type="text" placeholder="address" name="add"/>
				<input type="number" placeholder="number" name="mobno"/>
				<button type='submit'><b>Create</b></button>
				<p class="message">Already Registered? <a href="#">Login</a></p>
			</form>
			<form class="login-form" method="POST" action="/add1">
							<% if (message) { %>
<p><%= message %></p>
<% } %>
				<input type="email" placeholder="email" name="username"/>
				<input type="text" placeholder="password" name="pwd"/>
				<button> Login</button>
				<p class="message">Not Registered?<a href="#">Register here</a>
				</p>
			</form>
		</div>
	</div>
	<script src='https://code.jquery.com/jquery-3.2.1.min.js'></script>
	<script>
		$('.message a').click(function(){
			$('form').animate({height:"toggle",opacity:"toggle"} ,"slow")
		});
	</script>
